<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AndroidTraining" parent="Theme.MaterialComponents.DayNight.DarkActionBar">>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/actionBarColor</item>
        <item name="colorPrimaryVariant">@color/actionBarColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.AndroidTraining" parent="Base.Theme.AndroidTraining" />

    <style name="Theme.DefaultButtonColor" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorSecondary">@color/green</item>
    </style>

    <style name="Theme.AndroidTraining.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AndroidTraining.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AndroidTraining.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>